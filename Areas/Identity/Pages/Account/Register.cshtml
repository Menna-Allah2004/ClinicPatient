@page
@model RegisterModel
@{
    ViewData["Title"] = "إنشاء حساب جديد";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<main class="flex-grow-1 py-5 mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-lg-5">
                        <div class="text-center mb-4">
                            <h1 class="h3 fw-bold text-dark mb-2">@ViewData["Title"]</h1>
                            <p class="text-muted">انضم إلى منصة ميديكال كونكت واستفد من خدماتنا المتميزة</p>
                        </div>

                        <!-- User Type Tabs -->
                        <div class="bg-light rounded-3 p-1 mb-4">
                            <div class="row g-0">
                                <div class="col-6">
                                    <button id="patientBtn" class="btn w-100 py-2 px-3 rounded-3 active-tab">
                                        التسجيل كمريض
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button id="doctorBtn" class="btn w-100 py-2 px-3 rounded-3">
                                        التسجيل كطبيب
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Registration Form -->
                        <form id="registerForm" method="post" class="needs-validation">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            <input type="hidden" asp-for="Input.UserType" id="userTypeField" value="Patient" />

                            <!-- Personal Information -->
                            <div class="mb-4">
                                <h5 class="fw-bold mb-3">المعلومات الشخصية</h5>

                                <div class="row g-3">
                                    <!-- Full Name -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.FullName" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white text-muted">
                                                <i class="fas fa-user"></i>
                                            </span>
                                            <input asp-for="Input.FullName" class="form-control" placeholder="أدخل اسمك الكامل" />
                                        </div>
                                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                    </div>

                                    <!-- Email -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white text-muted">
                                                <i class="fas fa-envelope"></i>
                                            </span>
                                            <input asp-for="Input.Email" class="form-control" placeholder="أدخل بريدك الإلكتروني" />
                                        </div>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <!-- Phone Number -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white text-muted">
                                                <i class="fas fa-phone"></i>
                                            </span>
                                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="05xxxxxxxx" />
                                        </div>
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <!-- Birth Date -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.BirthDate" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white text-muted">
                                                <i class="fas fa-calendar"></i>
                                            </span>
                                            <input asp-for="Input.BirthDate" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                                    </div>

                                    <!-- Gender -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.Gender" class="form-label"></label>
                                        <select asp-for="Input.Gender" class="form-select">
                                            <option value="" selected disabled>اختر الجنس</option>
                                            <option value="male">ذكر</option>
                                            <option value="female">أنثى</option>
                                        </select>
                                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                    </div>

                                    <!-- City -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.City" class="form-label"></label>
                                        <select asp-for="Input.City" class="form-select">
                                            <option value="" selected disabled>اختر المدينة</option>
                                            <option value="شمال غزة">شمال غزة</option>
                                            <option value="غزة">غزة</option>
                                            <option value="المغازي">المغازي</option>
                                            <option value="النصيرات">النصيرات</option>
                                            <option value="دير البلح">دير البلح</option>
                                            <option value="خانيونس">خانيونس</option>
                                            <option value="رفح">رفح</option>
                                            <option value="البريج">البريج</option>
                                            <option value="أخرى">أخرى</option>
                                        </select>
                                        <span asp-validation-for="Input.City" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Account Information -->
                            <div class="mb-4">
                                <h5 class="fw-bold mb-3">معلومات الحساب</h5>

                                <div class="row g-3">
                                    <!-- Password -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.Password" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white text-muted">
                                                <i class="fas fa-lock"></i>
                                            </span>
                                            <input asp-for="Input.Password" class="form-control" placeholder="أدخل كلمة المرور" />
                                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                                <i class="fas fa-eye" id="passwordIcon"></i>
                                            </button>
                                        </div>
                                        <div class="form-text">يجب أن تحتوي على الأقل 8 أحرف</div>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <!-- Confirm Password -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white text-muted">
                                                <i class="fas fa-lock"></i>
                                            </span>
                                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="أعد إدخال كلمة المرور" />
                                            <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                                <i class="fas fa-eye" id="confirmPasswordIcon"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Doctor Specific Fields (hidden by default) -->
                            <div id="doctorFields" class="mb-4 d-none">
                                <h5 class="fw-bold mb-3">معلومات الطبيب</h5>

                                <div class="row g-3">
                                    <!-- Specialty -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.Specialty" class="form-label"></label>
                                        <select asp-for="Input.Specialty" class="form-select">
                                            <option value="" selected disabled>اختر التخصص</option>
                                            <option value="general">طب عام</option>
                                            <option value="cardiology">قلب وأوعية دموية</option>
                                            <option value="dermatology">جلدية</option>
                                            <option value="orthopedics">عظام</option>
                                            <option value="neurology">أعصاب</option>
                                            <option value="ophthalmology">عيون</option>
                                            <option value="pediatrics">أطفال</option>
                                            <option value="dintest">أسنان</option>
                                            <option value="other">أخرى</option>
                                        </select>
                                        <span asp-validation-for="Input.Specialty" class="text-danger"></span>
                                    </div>

                                    <!-- Years of Experience -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.Experience" class="form-label"></label>
                                        <input asp-for="Input.Experience" class="form-control" placeholder="عدد سنوات الخبرة" min="1" />
                                        <span asp-validation-for="Input.Experience" class="text-danger"></span>
                                    </div>

                                    <!-- Medical License -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.License" class="form-label"></label>
                                        <input asp-for="Input.License" class="form-control" placeholder="أدخل رقم الترخيص الطبي" />
                                        <span asp-validation-for="Input.License" class="text-danger"></span>
                                    </div>

                                    <!-- Clinic/Hospital -->
                                    <div class="col-md-6">
                                        <label asp-for="Input.Workplace" class="form-label"></label>
                                        <input asp-for="Input.Workplace" class="form-control" placeholder="اسم مكان العمل" />
                                        <span asp-validation-for="Input.Workplace" class="text-danger"></span>
                                    </div>
                                    
                                    <!-- Clinic/Hospital address-->
                                    <div class="col-md-6">
                                        <label asp-for="Input.Address" class="form-label"></label>
                                        <input asp-for="Input.Address" class="form-control" placeholder="اسم مكان العمل" />
                                        <span asp-validation-for="Input.Workplace" class="text-danger"></span>
                                    </div>

                                    <!-- Bio -->
                                    <div class="col-12">
                                        <label asp-for="Input.Bio" class="form-label"></label>
                                        <textarea asp-for="Input.Bio" class="form-control" rows="3" placeholder="اكتب نبذة مختصرة عن خبراتك ومهاراتك"></textarea>
                                        <span asp-validation-for="Input.Bio" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Terms and Privacy -->
                            <div class="mb-4">
                                <div class="form-check">
                                    <input asp-for="Input.AgreeTerms" class="form-check-input" />
                                    <label asp-for="Input.AgreeTerms" class="form-check-label">
                                        أوافق على <a href="#" class="text-primary">شروط الاستخدام</a> و <a href="#" class="text-primary">سياسة الخصوصية</a>
                                    </label>
                                    <span asp-validation-for="Input.AgreeTerms" class="text-danger d-block"></span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 mb-3">
                                إنشاء الحساب
                            </button>

                            <div class="text-center mt-4">
                                <span class="text-muted small">
                                    لديك حساب بالفعل؟
                                    <a asp-page="./Login" class="text-primary fw-medium">
                                        تسجيل الدخول
                                    </a>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle between patient and doctor registration
        document.getElementById('patientBtn').addEventListener('click', function() {
            this.classList.add('active-tab');
            document.getElementById('doctorBtn').classList.remove('active-tab');
            document.getElementById('doctorFields').classList.add('d-none');
            document.getElementById('userTypeField').value = 'Patient';
        });

        document.getElementById('doctorBtn').addEventListener('click', function() {
            this.classList.add('active-tab');
            document.getElementById('patientBtn').classList.remove('active-tab');
            document.getElementById('doctorFields').classList.remove('d-none');
            document.getElementById('userTypeField').value = 'Doctor';
        });

        // Toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('Input_Password');
            const passwordIcon = document.getElementById('passwordIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.classList.remove('fa-eye');
                passwordIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                passwordIcon.classList.remove('fa-eye-slash');
                passwordIcon.classList.add('fa-eye');
            }
        });

        document.getElementById('toggleConfirmPassword').addEventListener('click', function() {
            const confirmPasswordInput = document.getElementById('Input_ConfirmPassword');
            const confirmPasswordIcon = document.getElementById('confirmPasswordIcon');

            if (confirmPasswordInput.type === 'password') {
                confirmPasswordInput.type = 'text';
                confirmPasswordIcon.classList.remove('fa-eye');
                confirmPasswordIcon.classList.add('fa-eye-slash');
            } else {
                confirmPasswordInput.type = 'password';
                confirmPasswordIcon.classList.remove('fa-eye-slash');
                confirmPasswordIcon.classList.add('fa-eye');
            }
        });
    </script>

    <style>
        /* Right-to-left support for Arabic */
        body {
            direction: rtl;
            text-align: right;
        }

        /* Custom CSS for the tabs */
        .active-tab {
            background-color: #0d6efd;
            color: white;
        }

        /* Form validation */
        .field-validation-error {
            color: #dc3545;
            font-size: 0.875rem;
        }

        .input-validation-error {
            border-color: #dc3545;
        }

        /* Custom styles for the registration page */
        .rounded-4 {
            border-radius: 0.5rem;
        }
    </style>
}